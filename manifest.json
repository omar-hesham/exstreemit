{
	"manifest_version": 2,

	"name": "Extreemit",
	"description": "Everything you ever wanted to add to Steemit",
	"version": "0.0.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"

	},
	"icons": {
		"48":"steem48.png",
		"128":"steem128.png"
	},
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	"content_scripts": [
	  {
	    "matches": ["https://steemit.com/*"],
	    "css": ["toggle.css"],
	    "js": ["jquery.js","extreemit.js"],
	    "run_at": "document_end"
	  }
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true

	}

}